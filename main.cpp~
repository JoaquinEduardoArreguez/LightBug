#include "LightBug.h"
#define F_CPU 8000000UL
#include <util/delay.h> 


LightBug bicho (0,1,2);

int main(void){

	while(1){
		bicho.red(1);
		_delay_ms(500);
		bicho.green(1);
		_delay_ms(500);
		bicho.blue(1);
		_delay_ms(500);

		bicho.red(0);
		_delay_ms(500);
		bicho.green(0);
		_delay_ms(500);
		bicho.blue(0);
		_delay_ms(500);
	}

}
